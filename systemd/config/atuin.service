[Unit]
Description=Atuin
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/ubuntu/hosting/apps/atuin
ExecStart=/bin/bash -c "docker compose -f /home/ubuntu/hosting/apps/atuin/compose.yaml up --detach"
ExecStop=/bin/bash -c "docker compose -f /home/ubuntu/hosting/apps/atuin/compose.yaml stop"

[Install]
WantedBy=multi-user.target
